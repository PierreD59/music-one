{% extends 'base.html.twig' %}

{% block title %}
    {{ isNew ? 'Nouvel événement' : 'Modifier l\'événement' }}
    - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event_form') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event_form') }}
{% endblock %}

{% block body %}
    <h1>{{ isNew ? 'Nouvel événement' : 'Modifier l\'événement' }}</h1>

    {{ form_start(form) }}
    <div class="form-row">
        {{ form_row(form.name) }}
    </div>
    <div class="form-row">
        {{ form_row(form.startAt) }}
        {{ form_row(form.endAt) }}
    </div>
    <div class="form-row">
        {{ form_row(form.price) }}
        {{ form_row(form.capacity) }}
    </div>
    <div class="form-row">
        {{ form_row(form.category) }}
        {{ form_row(form.place) }}
    </div>
    <div class="form-row">
        {{ form_row(form.description) }}
    </div>
    <div class="form-row">
        {{ form_row(form.pictureUrl) }}
        {{ form_row(form.pictureFile) }}
    </div>
    {% if form.vars.data.picture %}
        <div class="picture-preview">
            <img src="{{ form.vars.data.picture|buildMediaPath }}" alt="Image de l'événement">
        </div>
    {% endif %}

    <button class="button">
        {{ isNew ? 'Ajouter' : 'Modifier' }}
    </button>
    {{ form_end(form) }}
{% endblock %}
